<div class="container">
    <div class="row">

        <%= render 'books/list', user: @user %>

        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
              <table class="table">
                  <tbody>
                  <% if @user == current_user %>
                      <tr>
                          <td>
                              <%= link_to(user_path(@user.id)) do %>
                              <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
                              <p><%= @user.name %></p>
                              <% end %>
                          </td>
                          <td><%= @book.title %></td>
                          <td><%= @book.body %></td>
                          <td><%= link_to 'Edit', edit_book_path(@book.id), class:"btn brn-sm btn-success" %></td>
                          <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, class:"btn brn-sm btn-danger" %></td>
                      </tr>
                  <% else %>
                      <tr>
                          <td>
                              <%= link_to(user_path(@user.id)) do %>
                              <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %>
                              <p><%= @user.name %></p>
                              <% end %>
                          </td>
                          <td><%= @book.title %></td>
                          <td><%= @book.body %></td>
                      </tr>
                  <% end %>
                  </tbody>
              </table>

        </div>



    </div>
</div>