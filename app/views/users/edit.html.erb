<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>

  <div class="error-explanation">
    <% if @user.errors.any? %>
      <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
      <% @user.errors.full_messages.each do |message| %>
       <ul><li><%= message %></li></ul>
      <% end %>
    <% end %>
  </div>      
 
     <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form group">
          <%= f.label :profile_image, "Image" %><br>
          <%= f.attachment_field :profile_image, placeholder: "Choose File" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_field :introduction, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        </div>
      <% end %>


    </div>
  </div>
</div>
